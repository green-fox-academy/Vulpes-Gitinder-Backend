@model GiTinder.Models.Settings

@{
    ViewData["Title"] = "Edit";
    Layout = "SettingsView";
}

<h2>Edit</h2>

<h4>Settings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <select asp-for="UserName" class="form-control" asp-items="ViewBag.UserName"></select>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EnableNotification" /> @Html.DisplayNameFor(model => model.EnableNotification)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MaxDistanceInMeters" class="control-label"></label>
                <input asp-for="MaxDistanceInMeters" class="form-control" />
                <span asp-validation-for="MaxDistanceInMeters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrefferedLanguages" class="control-label"></label>
                <input asp-for="PrefferedLanguages" class="form-control" />
                <span asp-validation-for="PrefferedLanguages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
